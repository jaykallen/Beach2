<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOcean"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorOcean"
        android:gravity="center"
        android:text="Sales Detail Report"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:paddingEnd="32dp"
            android:text="Passers by:" />

        <TextView
            android:id="@+id/passersText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="32dp"
            android:text="1000"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingEnd="32dp"
            android:text="Drinks Sold:" />

        <TextView
            android:id="@+id/salesText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="32dp"
            android:text="500"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:paddingEnd="32dp"
            android:text="Drink Price:" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="32dp"
            android:text="$ 5.00"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:paddingEnd="32dp"
            android:text="Gross Earnings:" />

        <TextView
            android:id="@+id/grossText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="32dp"
            android:text="$ 5000.00"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:paddingEnd="32dp"
            android:text="Sales Gained:" />

        <TextView
            android:id="@+id/salesGainedText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="32dp"
            android:text="-200"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBackClick"
        android:text="Back" />

</LinearLayout>